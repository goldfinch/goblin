{
  "overrides": [
    {
      "files": ["*.js", "*.vue"],
      "options": {
        "semi": true,
        "tabWidth": 2,
        "singleQuote": true
      }
    },
    {
      "files": ["*.scss", "*.less"],
      "options": {
        "semi": true,
        "tabWidth": 2,
        "singleQuote": true
      }
    },
    {
      "files": "*.ss",
      "options": {
        "parser": "html",
        "tabWidth": 2,
        "singleQuote": false
      }
    },
    {
      "files": "*.php",
      "options": {
        "parser": "php",
        "plugins": ["@prettier/plugin-php"],
        "phpVersion": "8.0",
        "singleQuote": true,
        "tabWidth": 4
      }
    },
    {
      "files": "*.yml",
      "options": {
        "parser": "yaml"
      }
    },
    {
      "files": "*.xml",
      "options": {
        "parser": "xml",
        "plugins": ["@prettier/plugin-xml"],
        "tabWidth": 4,
        "xmlQuoteAttributes": "double",
        "xmlSortAttributesByKey": true
      }
    }
  ]
}
