{
  "plugins": [
    "stylelint-scss"
	],
  "extends": [
    "stylelint-config-standard-scss",
    "stylelint-config-recommended-vue",
    "stylelint-config-recommended-scss",
		"stylelint-config-prettier-scss",
		"stylelint-config-clean-order"
  ],
	"rules": {
		"order/properties-order": [
			"custom-properties",
			"declarations"
		]
	},
  "ignoreFiles": [
      "node_modules"
  ]
}
