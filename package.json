{
  "name": "@goldfinch/goblin",
  "version": "1.0.0",
  "description": "bundle of lints",
  "main": "index.js",
  "scripts": {
      "eslint": "npx eslint themes/main/src/js --ext .js,.vue",
      "eslint-fix": "npx eslint --fix",
      "stylelint-scss": "npx stylelint themes/main/**/*.scss",
      "stylelint-scss-fix": "npm run stylelint-scss --fix",
      "stylelint-js": "npx stylelint themes/main/**/*.js",
      "stylelint-js-fix": "npm run stylelint-js --fix",
      "stylelint-vue": "npx stylelint themes/main/**/*.vue",
      "stylelint-vue-fix": "npm run stylelint-vue --fix",
      "prettier-src-check": "npx prettier themes/main/src --check --single-quote",
      "prettier-src-write": "npx prettier themes/main/src --write --single-quote",
      "prettier-ss-check": "npx prettier \"themes/main/**/*.ss\" --check",
      "prettier-ss-write": "npx prettier \"themes/main/**/*.ss\" --write",
      "prettier-app-check": "npx prettier \"app/**/*.php\" --check",
      "prettier-app-write": "npx prettier \"app/**/*.php\" --write",
      "prettier-yml-check": "npx prettier \"app/**/*.yml\" --check",
      "prettier-yml-write": "npx prettier \"app/**/*.yml\" --write",
      "prettier-xml-check": "npx prettier \"**/*.xml\" --check",
      "prettier-xml-write": "npx prettier \"**/*.xml\" --write",
      "markuplint-ss": "markuplint \"themes/main/**/*.ss\"",
      "markuplint-vue": "markuplint \"themes/main/**/*.vue\"",
      "htmlhint-ss": "npx htmlhint \"themes/main/**/*.ss\"",
      "htmlhint-vue": "npx htmlhint \"themes/main/**/*.vue\"",
      "vitest": "vitest",
      "vitest-coverage": "vitest run --coverage",
      "snyk-test": "npx snyk test --npm-workspaces"
  },
  "devDependencies": {
      "@markuplint/php-parser": "^3.9.0",
      "@markuplint/vue-parser": "^3.9.0",
      "@prettier/plugin-php": "^0.20.1",
      "@prettier/plugin-xml": "^3.2.0",
      "@vitejs/plugin-vue": "^4.2.1",
      "@vitest/coverage-v8": "^0.34.2",
      "eslint": "^8.47.0",
      "eslint-config-airbnb-base": "^15.0.0",
      "eslint-plugin-import": "^2.28.1",
      "eslint-plugin-vue": "^9.17.0",
      "htmlhint": "^1.1.4",
      "markuplint": "^3.12.0",
      "postcss-html": "^1.5.0",
      "prettier": "^3.0.2",
      "snyk": "^1.1205.0",
      "stylelint": "^15.10.3",
      "stylelint-config-clean-order": "^5.2.0",
      "stylelint-config-prettier-scss": "^1.0.0",
      "stylelint-config-recommended-scss": "^12.0.0",
      "stylelint-config-recommended-vue": "^1.5.0",
      "stylelint-config-standard-scss": "^10.0.0",
      "textlint": "^13.3.3",
      "textlint-plugin-html": "^1.0.0",
      "textlint-rule-common-misspellings": "^1.0.1",
      "textlint-rule-en-spell": "^1.2.4",
      "textlint-rule-spellcheck-tech-word": "^5.0.0",
      "textlint-rule-spellchecker": "^2.2.1",
      "textlint-rule-spelling": "^0.3.0",
      "textlint-rule-terminology": "^3.0.5",
      "textlint-rule-write-good": "^2.0.0",
      "vitest": "^0.34.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/goldfinch/goblin.git"
  },
  "keywords": [
    "lint"
  ],
  "author": "Art Karasev",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/goldfinch/goblin/issues"
  },
  "homepage": "https://github.com/goldfinch/goblin#readme"
}
